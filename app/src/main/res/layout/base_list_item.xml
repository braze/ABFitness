<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/base_lcard_view_item_margin"
    app:cardCornerRadius="@dimen/base_lcard_view_item_corner_radius"
    app:cardElevation="@dimen/base_lcard_view_item_elevation">

    <TextView
        android:id="@+id/base_item_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/base_list_item_text_margin"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textSize="@dimen/base_list_item_text_size"
        tools:text="Monday" />

</android.support.v7.widget.CardView>





